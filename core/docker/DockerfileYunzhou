# FROM ghcr.io/airlift/jvmkill:latest AS jvmkill
FROM harbor.qihoo.net/jcycpb-xtb-yunzhou/jvmkill:latest AS jvmkill

# FROM eclipse-temurin:22-jdk
FROM harbor.qihoo.net/jcycpb-xtb-yunzhou/eclipse-temurin:22-jdk
ENV CATALOG_MANAGEMENT=static

RUN \
    set -xeu && \
    echo 'Acquire::Retries "3";' > /etc/apt/apt.conf.d/80-retries && \
    echo 'Acquire::http::Timeout "15";' > /etc/apt/apt.conf.d/80-timeouts && \
    apt-get update -q && \
    apt-get install -y -q tar less python3 curl && \
    apt-get install -y -q vim lzop && \
    apt-get install -y -q procps sysstat htop fio memtester sysbench p7zip-full && \
    apt-get install -y -q ethtool mtr iproute2 iputils-ping iputils-arping iputils-tracepath net-tools iperf iperf3 netperf nethogs nload iftop ifstat qperf && \
    rm -rf /var/lib/apt/lists/* && \
    update-alternatives --install /usr/bin/python python /usr/bin/python3 1 && \
    groupadd trino --gid 1100 && \
    useradd trino --uid 1100 --gid 1100 --create-home && \
    mkdir -p /usr/lib/trino /data/trino && \
    chown -R "trino:trino" /usr/lib/trino /data/trino && \
    cp /usr/share/zoneinfo/Asia/Shanghai /etc/localtime && \
    echo 'Asia/Shanghai' > /etc/timezone && \
    echo '* soft nofile 262144' >> /etc/security/limits.conf && \
    echo '* hard nofile 262144' >> /etc/security/limits.conf

ARG TRINO_VERSION
COPY --chown=trino:trino trino-cli-${TRINO_VERSION}-executable.jar /usr/bin/trino
COPY --chown=trino:trino trino-server-${TRINO_VERSION} /usr/lib/trino
COPY --chown=trino:trino default/etc /etc/trino
COPY --chown=trino:trino --from=jvmkill /libjvmkill.so /usr/lib/trino/bin

COPY --chown=trino:trino default/hadoop /usr/lib/trino/hadoop
COPY --chown=trino:trino async-profiler-3.0-linux-x64 /home/trino/async-profiler-3.0

EXPOSE 8080
USER trino:trino
ENV LANG en_US.UTF-8
ENV JAVA_LIBRARY_PATH /usr/lib/trino/hadoop/gpl_native
CMD ["/usr/lib/trino/bin/run-trino"]
HEALTHCHECK --interval=10s --timeout=5s --start-period=10s \
  CMD /usr/lib/trino/bin/health-check
